{% if this.hasAlt() %}
  <li role="presentation" class="alt-text">
    <div class="value" v-on:click.prevent.stop="showAlt">
      {{ t('Alt') }}:
      <span>{{ this.getAlt() }}</span>
    </div>
    <div class="input-group">
      <span class="input-group-addon">{{ t('Alt') }}:</span>
      <input name="{{ this.getName() }}[alt]" v-model="alt"
             placeholder="{{ t('Enter alt text') }}"
             class="form-control input-alt"
             v-on:change="doChangeAlt"
             v-on:keydown="doChangeAlt"
             v-on:blur="doChangeAlt"/>
    </div>
  </li>
{% endif %}
