{##
 # Left actions
 #}

{% for i, tpl in this.getLeftActions() %}
  {% set content %}
    {% include tpl %}
  {% endset %}

  {% apply spaceless %}
    <div class="{{ this.getActionCellClass(i, tpl) }}">{{ content }}</div>
  {% endapply %}

  {% if content|trim is not empty %}
    <div class="separator"></div>
  {% endif %}
{% endfor %}
