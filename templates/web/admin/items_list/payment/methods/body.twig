{##
 # Payment methods list
 #}

<div class="{{ this.getListCSSClasses() }}">

  {% if this.getPageData() %}
    <ul>
      {% for method in this.getPageData() %}
        <li class="{{ this.getLineClass(method) }}" data-module-name="{{ method.getModuleName() }}">
          <div class="payment-method-line">
            {% if this.isPredefinedList() and not this.isConfigured(method) %}
              {{ widget_list('payment.predefined-methods.list.line', method=method) }}
            {% else %}
              {{ widget_list('payment.methods.list.line', method=method) }}
            {% endif %}
          </div>
        </li>
      {% endfor %}
    </ul>
  {% endif %}

</div>
