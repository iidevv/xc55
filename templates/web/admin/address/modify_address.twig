<div class="address-dialog">

  {% if this.get('address') %}
    <h2>{{ t('Change address') }}</h2>
  {% endif %}
  {% if not this.get('address') %}
    <h2>{{ t('New address') }}</h2>
  {% endif %}

  {% if this.get('address') %}
    {{ widget('\\XLite\\View\\Model\\Address\\Address', modelObject=this.get('address'), useBodyTemplate='1') }}
  {% endif %}
  {% if not this.get('address') %}
    {{ widget('\\XLite\\View\\Model\\Address\\Address', profile_id=this.profile_id, useBodyTemplate='1') }}
  {% endif %}

</div>
