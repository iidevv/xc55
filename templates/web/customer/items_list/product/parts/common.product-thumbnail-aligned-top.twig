<a
  href="{{ this.getProductURL(this.categoryId) }}"
  class="product-thumbnail">
  {{ widget('\\XLite\\View\\Image', lazyLoad=true, image=this.get('product').getImage(), maxWidth=this.getIconWidth(), maxHeight=this.getIconHeight(), alt=this.get('product').name, verticalAlign='top', className='photo') }}
</a>
