{% if this.isGoogleRecaptchaRequiredForAnonymous() %}
<tr>
  <td class="captcha-field field" align="center" style="padding-bottom:20px;">
    {{ widget('QSL\\reCAPTCHA\\View\\FormField\\ReCAPTCHA', fieldOnly='true') }}
    <input type="hidden" name="is_signin_anonymous" value="1">
  </td>
</tr>
{% if this.getGoogleRecaptchaError() %}
<tr>
  <td class="form-error" style="font-size:12px;color:#ec554e;padding-top:0;">
    {{ this.getGoogleRecaptchaError() }}
  </td>
</tr>
{% endif %}
{% endif %}
