{##
 # Footer menu
 #}

{% set open_close_buttons %}
    <span class="opnr plus">
        <svg fill="#386eaf" height="28" viewBox="0 0 24 24" width="28"
             xmlns="http://www.w3.org/2000/svg">
                <path d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"/>
                <path d="M0 0h24v24H0z" fill="none"/>
        </svg>
    </span>

    <span class="opnr minus">
        <svg fill="#386eaf" height="28" viewBox="0 0 24 24" width="28"
             xmlns="http://www.w3.org/2000/svg">
                <path d="M19 13H5v-2h14v2z"/>
                <path d="M0 0h24v24H0z" fill="none"/>
        </svg>
    </span>
{% endset %}

<div id="secondary-menu" class="clearfix">
    <div class="ftr-menu">
        <amp-accordion disable-session-states>
            {% for item in this.itemsTree %}
                <section {% if not item.children %}class="empty"{% endif %}>
                    <h4>
                        {% if item.url %}
                            <a href="{{ item.url }}">{{ item.label }}</a>
                        {% else %}
                            <span class="footer-title">{{ item.label }}</span>
                        {% endif %}

                        {% if item.children %}
                            {{ open_close_buttons }}
                        {% endif %}
                    </h4>

                    {% include 'modules/QSL/AMP/modules/CDev/SimpleCMS/footer_menu_items.twig' with {items: item.children} %}
                </section>
            {% endfor %}
        </amp-accordion>
    </div>
</div>