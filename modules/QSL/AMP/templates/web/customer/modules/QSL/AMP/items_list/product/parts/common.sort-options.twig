{% if this.isAmpMainProductList() %}
    {% if this.isSortBySelectorVisible() %}
        <div class="sort-box">
            <div>
                <span class="sort-by-label">{{ t('Sort by:') }}</span>
                <span class="sort-by-value">{{ t(this.getSortByLabel()) }} {{ t(this.getSortOrderLabel()) }}</span>
            </div>

            <ul class="display-sort sort-crit grid-list" id="{{ this.getSortWidgetId(true) }}">
                {% for key, name in this.sortByModes %}
                    <li class="list-type-grid {% if this.isSortByModeSelected(key) %} selected{% endif %}">
                        <a data-sort-by="{{ key }}" data-sort-order="{{ this.getSortOrderToChange(key) }}"
                           href="{{ this.getAbsoluteURL(this.getActionURL({'sortBy': key, 'sortOrder': this.getSortOrderToChange(key)})) }}">
                            {{ t(name) }}<i class="sort-arrow {{ this.getSortArrowClassCSS(key) }}"></i>
                        </a>
                    </li>
                {% endfor %}
            </ul>

        </div>
    {% endif %}
{% endif %}
