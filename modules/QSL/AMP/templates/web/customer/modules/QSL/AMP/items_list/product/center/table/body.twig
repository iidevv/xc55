{##
 # Products list (table variant)
 #}
<div class="products responsive-wrapper">

  {% if this.getPageData() %}
    <table class="prod-tbl" cellspacing="0">
      <tr>
        {{ widget_list('captions', type='inherited') }}
      </tr>

      {% for product in this.getPageData() %}
        {{ this.getProductWidgetContent(product)|raw }}
      {% endfor %}

    </table>
  {% endif %}

  {{ widget_list('buttons', type='nested') }}

</div>
