{##
 # Header (analytics.js)
 #}

{% if this.isTrackingDisabled() %}
  <script>
    window['ga-disable-{{ this.measurement_id }}'] = true;
  </script>
{% endif %}

{% if this.debug_enabled %}
<script type="text/javascript">
  window.ga_debug = {trace: true};
</script>
{% endif %}

<!-- Google Analytics -->
<script type="text/javascript" id="ga-init-script" data-settings='{{ this.js_settings|json_encode() }}'>
(function(i,s,o,g,r,a,m){
i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
})(window,document,'script', '{{ this.script_url }}','ga');

ga('create', '{{ this.measurement_id }}', 'auto'{% if this.tracker_config|length %}, {{ this.tracker_config|json_encode()|raw }}{% endif %});
</script>
<!-- End Google Analytics -->
