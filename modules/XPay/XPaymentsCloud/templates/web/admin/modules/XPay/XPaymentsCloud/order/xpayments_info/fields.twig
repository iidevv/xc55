{##
 # X-Payments info. Transaction fields
 #}

<table class="fields">

  <tr>
    <td class="name">{{ t('Message') }}:</td>
    <td class="value">{{ tr.message|escape }}</td>
  </tr>

  <tr>
    <td class="name">{{ t('Transaction ID') }}:</td>
    <td class="value">{{ tr.txnId|escape }}</td>
  </tr>

  {% for field in tr.fields %}
    <tr>
      <td class="name">{{ field.name|escape }}:</td>
      <td class="value">{{ field.value|escape }}</td>
    </tr>
  {% endfor %}

</table>
