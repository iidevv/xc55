{##
 # eSelect configuration page
 #}

<div class="settings-text eselect">
  {{ t('To set up the integration, go to the _Site management_')|raw }}
  <ol>
    <li>{{ t('The Store ID and HPP Key value must be exactly the same as on it.') }}</li>
    <li>{{ t('The Approved URL value must be exact as this:') }}
      <div class="eselect-webhook">
        <div class="url">
          {{ widget('XLite\\View\\Button\\CopyLink', copy=this.getSecureShopURL('?target=payment_return')) }}
          {{ this.getSecureShopURL('?target=payment_return') }}
        </div>
      </div>
    </li>
    <li>
      {{ t('The Declined URL value must be exact as this:') }}
      <div class="eselect-webhook">
        <div class="url">
          {{ widget('XLite\\View\\Button\\CopyLink', copy=this.getSecureShopURL('?target=payment_return')) }}
          {{ this.getSecureShopURL('?target=payment_return') }}
        </div>
      </div>
    </li>
    <li>{{ t('Set the Response Method setting to Sent to your server as a POST.') }}</li>
    <li>{{ t('Enable the Use Enhanced Cancel option.') }}</li>
  </ol>
</div>
<ul class="table model-properties settings-table eselect">
  <li>
    {{ widget('XLite\\View\\FormField\\Input\\Text',
      fieldName='settings[store_id]',
      fieldId='settings_store_id',
      value=this.paymentMethod.getSetting('store_id'),
      label=t('PS Store ID'),
      required='true'
    ) }}
  </li>
  <li>
    {{ widget('XLite\\View\\FormField\\Input\\Text',
      fieldName='settings[hpp_key]',
      fieldId='settings_secret',
      value=this.paymentMethod.getSetting('hpp_key'),
      label=t('HPP Key'),
      required='true'
    ) }}
  </li>
  <li>
    {{ widget('XLite\\View\\FormField\\Select\\TestLiveModeSetting',
      value=this.paymentMethod.getSetting('mode')
    ) }}
  </li>
  <li>
    {{ widget('XLite\\View\\FormField\\Input\\Text\\OrderPrefix',
      value=this.paymentMethod.getSetting('prefix')
    ) }}
  </li>
</ul>
