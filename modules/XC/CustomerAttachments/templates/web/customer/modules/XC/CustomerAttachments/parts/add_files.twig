{##
 # Customer attachmetns add file button
 #
 # @ListChild (list="customer.attachments.popup", weight="100")
 #}

{% if this.getAllowedQuantity() %}
  <div>
    <form action="{{ xurl('customer_attachments', 'upload') }}" enctype="multipart/form-data"
          class="attachment-form no-popup-ajax-submit" method="post">
      <p>
        <input type="file" multiple name="customer_attachments[]" accept="{{ this.getAcceptExtensionsString() }}">
        <input type="hidden" name="item_id" value="{{ this.item.getId() }}">
        <input type="hidden" name="max_file_uploads_warning" value=false>
      </p>
      <div>
        {{ widget('\\XC\\CustomerAttachments\\View\\AttachmentDescription', orderItem=this.item) }}
        {{ widget('\\XLite\\View\\Button\\Submit', label=t('Upload file')) }}
      </div>
    </form>
  </div>
{% endif %}
