 # Checkout : order review step : selected state : items
 #}

<addr inline-template>
  <address>
    <div class="checkout_fastlane_address_wrapper {{ this.getDisplayType() }}" v-bind:class="classes">
      {% if this.isSameAddress() and this.isSameAddressVisible() %}
        <div class="is-same-address-text">{{ t('The same as shipping') }}</div>
      {% endif %}
      <div class="address-box" v-data='{ "type": "{{ this.getAddressType() }}", "addressId": "{{ this.getAddressId() }}", "fieldsDefault": {{ this.serializeFormSchema() }}, "display": "{{ this.getDisplayType() }}" }'>
        {% for fieldName, fieldData in this.getAddressFields() %}
          {% if not this.isHiddenField(fieldName) %}
            <span class="address-field address-field_{{ fieldName }}" v-text="{{ 'fields.' ~ fieldName }}">{{ fieldData.value }}</span>
          {% endif %}
        {% endfor %}
      </div>

      {{ widget('XC\\FastLaneCheckout\\View\\Button\\AddressModify', label=t('Edit'), style='checkout_fastlane_address_edit_link always-reload', type=this.getAddressType(), widgetTitle=this.getEditAddressTitle(), attributes={'v-bind:title': 'btnTitle'}) }}
    </div>
  </address>
</addr>
