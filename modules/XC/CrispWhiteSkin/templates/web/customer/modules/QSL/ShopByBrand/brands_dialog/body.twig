{# #
 # Brands list (grid style)
#}

<ul class="subcategory-view-icons subcategory-list grid-list clearfix">
  {% for idx, _brand in this.getBrands() %}
    <li>
      <a href="{{ xurl('brand', '', {'brand_id': _brand.0.brand_id}) }}">
        <span class="subcategory-icon lazy-load">
          <span class="subcategory-icon_wrapper{% if not _brand.0.image %} no-image{% endif %}">
          {{ widget('\\XLite\\View\\Image', isBlurApplicable=true, image=_brand.0.image, maxWidth=this.getIconWidth(), maxHeight=this.getIconHeight(), centerImage='1', alt=this.getAlt(_brand.0.image)) }}
        </span>
        </span>
        <span class="subcategory-name">{{ _brand.name }}</span>
      </a>
    </li>
  {% endfor %}
</ul>

{% if this.isAllBrandsLinkVisible() %}
  <div class="all-brands-link">
    <a href="{{ xurl('brands') }}">
      <span class="subcategory-name">{{ t('View All') }}</span>
    </a>
  </div>
{% endif %}
