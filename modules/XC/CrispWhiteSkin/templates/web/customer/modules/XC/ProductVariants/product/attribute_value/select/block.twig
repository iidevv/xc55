{##
 # Attribute value (block)
 #}

<div class="block-value{{ isSelected ? ' selected' : '' }}{%if isAffectingAttribute %}{{ not option.isVariantAvailable() ? ' unavailable' : '' }}{{ option.isVariantStockWarning() ? ' stockwarning' : '' }}{% endif %}"
     data-name="{{ this.getName() }}"
     data-value="{{ option.id }}"
     data-modifiers="{{ this.getModifierTitle(option)|raw }}"
>
  <span class="block-value-name">{{ this.getOptionTitle(option) }}</span>

  {% include this.getUnavailableTooltipTemplate() with {'option': v, 'isAffectingAttribute': isAffectingAttribute} %}
</div>

